<div class="table font-weight-bold">
<h1>マイページ</h1>
<p>名前 : <%= @user.name %></p>
<p>メールアドレス : <%= @user.email %></p>
<p>プロフィール : <%= @user.profile %></p>
</div>

<% if current_user.id == @user.id %>
    <%= link_to "編集する", edit_user_registration_path,class:"btn btn-primary"%>
<% end %>

<h2>ユーザーの投稿一覧</h2>
<% @user. claims.each do |t| %>
    <div class="list-group-item">
    <%= t.user.name %>
    <%= t.title %>
    </div>
<% end %>

<!-- 以下はいいね機能を実装している場合-->

<h2>ユーザーがいいねした投稿一覧</h2>
<% @user.liked_claims.each do |t| %>
    <div class="list-group-item">
        <%= t.user.name %>
        <%= t.title %>
    </div>
<% end %> 

<!-- ここまで-->

<%= link_to "一覧に戻る", claims_path,class:"btn btn-primary" %>